{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    },
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.config.dev.js"
      }
    }
  },
  "extends": "react-app",
  "globals": {
    "__IS_DEV__": true,
    "__IS_MOCK__":true,
    "location": true
  },
  "rules": {
    "no-multi-spaces": 1,
    "react/jsx-tag-spacing": 0,
    "jsx-quotes": 1,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-boolean-value": 1,
    "react/no-string-refs": 1,
    "react/self-closing-comp": 0,
    "react/sort-comp": 1,
    "react/jsx-pascal-case": 1,
    "jsx-a11y/href-no-hash": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true,
      "trailingComma": "es5"
    }]
  },
  "plugins": [
    "react",
    "prettier"
  ]
}
